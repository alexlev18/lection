<Window x:Class="MapleElectionSim.App.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulation Settings" Height="400" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Economic Growth" />
            <TextBox Text="{Binding EconomicGrowth, Mode=TwoWay, StringFormat=F2}" Margin="0,0,0,8" />
            <TextBlock Text="Cost of Living" />
            <TextBox Text="{Binding CostOfLivingIndex, Mode=TwoWay, StringFormat=F2}" Margin="0,0,0,8" />
            <TextBlock Text="Media Impact Weight" />
            <TextBox Text="{Binding MediaImpactWeight, Mode=TwoWay, StringFormat=F2}" Margin="0,0,0,8" />
            <TextBlock Text="Scandal Weight" />
            <TextBox Text="{Binding ScandalWeight, Mode=TwoWay, StringFormat=F2}" Margin="0,0,0,8" />
            <TextBlock Text="Policy Announcement Boost" />
            <TextBox Text="{Binding PolicyAnnouncementBoost, Mode=TwoWay, StringFormat=F2}" Margin="0,0,0,8" />
            <TextBlock Text="Base Turnout" />
            <TextBox Text="{Binding BaseTurnout, Mode=TwoWay, StringFormat=F2}" Margin="0,0,0,8" />
            <CheckBox Content="Weekly Tick" IsChecked="{Binding WeeklyTick, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Close" Width="80" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
